<div class="container-fluid container-fluid-custom py-5 mb-5">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item">Create Note</li>
                </ol>
            </nav>
            <div class="col d-flex justify-content-between align-items-center">
                <h1 class="h3">Create Note</h1>
            </div>
        </div>
    </div>
    <form action="/dashboard/create" method="POST" class="position-relative">
        <div class="form-group mb-4 position-absolute" style="left: 1px; top: 1px; right: 1px;">
            <input required type="text" class="form-control fw-bold border-9 fs-4" id="title" name="title" placeholder="Title">
        </div>
        <div class="form-group mb-4">
            <textarea required class="form-control pt-5 fs-4" name="body" id="body" rows="12" placeholder="Take a note..."></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">+ Create Note</button>
        </div>
    </form>
</div>